% Nice convenient indexed list and sets
% Commands starting with l produces lists like x_1, x_2, \dotsc, x_n,
% Commands starting with s produce sets like \{x_1, x_2, \dotsc, x_n\}.
% Commands with x default to x, otherwise it lets you specify the object
\def\lxoneton{\lof[x]{1}{2}{n}}
\def\sxoneton{\{\lxoneton\}}
\def\lxzeroton{\lof[x]{0}{1}{n}}
\def\sxzeroton{\{\lxzeroton\}}
\newcommand{\lxoneto}[1]{\lof[x]{1}{2}{#1}}
\newcommand{\sxoneto}[1]{\{\lxoneton{#1}\}}
\newcommand{\lxzeroto}[1]{\lof[x]{0}{1}{#1}}
\newcommand{\sxzeroto}[1]{\{\lxzeroton{#1}\}}

\newcommand{\loneton}[1]{\lof[#1]{1}{2}{n}}
\newcommand{\soneton}[1]{\qty{\loneton{#1}}}
\newcommand{\lzeroton}[1]{\lof[#1]{0}{1}{n}}
\newcommand{\szeroton}[1]{\qty{\lzeroton{#1}}}
\newcommand{\loneto}[2]{\lof[#1]{1}{2}{#2}}
\newcommand{\soneto}[2]{\{\loneto{#1}{#2}\}}
\newcommand{\lzeroto}[2]{\lof[#1]{0}{1}{#2}}
\newcommand{\szeroto}[2]{\{\lzeroto{#1}{#2}\}}

% Create a list of something. Use: \lof[x]{s1}{s2}{e}. This results in the
% output x_{s1}, x_{s2}, \dotsc, x_{e}. See above for shortcuts.
\def\lof{\@ifnextchar[{\@indexedlist}{\@rawlist}}
\def\sof{\@ifnextchar[{\@indexedset}{\@rawset}}
\newcommand{\@indexedlist}[4][]{{#1_{#2}, #1_{#3}, \dots, #1_{#4}}}
\newcommand{\@rawlist}[3]{{{#1}, {#2}, \dots, {#3}}}
\newcommand{\@indexedset}[4][]{\{{#1_{#2}, #1_{#3}, \dots, #1_{#4}}\}}
\newcommand{\@rawset}[3]{\{{{#1}, {#2}, \dots, {#3}}\}}

